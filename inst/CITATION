citHeader("Please cite the paper below for the 'medshift' software package
           itself. Please also make sure to cite the appropriate articles
           describing the statistical methodology.")

year <- format(Sys.Date(), "%Y")
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype = "Manual",
         title = "{medshift}: Causal mediation analysis for stochastic interventions",
         author = c(person("Nima", "Hejazi", "S"),
                    person("Iván", "Díaz")),
         year = year,
         note = note,
         doi = "",
         url = "https://github.com/nhejazi/medshift")

bibentry(bibtype = "Article",
         journal = "Journal of the Royal Statistical Society, Series B (Statistical Methodology)",
         title = "Causal mediation analysis for stochastic interventions",
         author = c(person("Iván", "Díaz"),
                    person("Nima", "Hejazi", "S")),
         year = "2020",
         month = "February",
         doi = "10.1111/rssb.12362",
         url = "https://doi.org/10.1111/rssb.12362")
